<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.dao.GoodsOrderDao">
	<insert id="addOrder" parameterType="GoodsOrder">
		insert into goods_order
			(goodsid, count, color,size,userid,ordercode,date,type,username,title,price,imgurl)
		values
			(#{goodsid}, #{count}, #{color}, #{size}, #{userid}, #{ordercode}, #{date}, #{type}, #{username}, #{title}, #{price}, #{imgurl})
	</insert>
	<select id="getOrderByType" resultType="GoodsOrder">
		select * from goods_order where type = #{type} and userid=#{userid} limit #{start},#{end}
	</select>
	<select id="getAllOrder" resultType="GoodsOrder">
		select * from goods_order where userid=#{userid} limit #{start},#{end}
	</select>
	<select id="getOrderCountByType" resultType="java.lang.Integer">
		select count(1) from goods_order where type = #{type} and userid=#{userid}
	</select>
	<select id="getOrderCount" resultType="java.lang.Integer">
		select count(1) from goods_order where userid=#{userid}
	</select>
</mapper>